<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">


    <changeSet id="create_log_sequences" author="13tom13">
        <createSequence sequenceName="log_id_seq" schemaName="log" startValue="1"
                        incrementBy="1"/>
    </changeSet>

    <changeSet id="create_log_table" author="13tom13">
        <createTable tableName="logger" schemaName="log">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="action" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <sql>
            ALTER TABLE log.logger ALTER COLUMN id SET DEFAULT nextval('log.log_id_seq');
        </sql>

        <setTableRemarks tableName="logger" schemaName="log" remarks="Описание таблицы logger"/>
        <setColumnRemarks tableName="logger" schemaName="log" columnName="id" remarks="Уникальный идентификатор логирования"/>
        <setColumnRemarks tableName="logger" schemaName="log" columnName="date_time" remarks="Дата и время выполнения действия"/>
        <setColumnRemarks tableName="logger" schemaName="log" columnName="email" remarks="email пользователя выполнившего действие"/>
        <setColumnRemarks tableName="logger" schemaName="log" columnName="action" remarks="действие пользователя"/>
    </changeSet>

</databaseChangeLog>
